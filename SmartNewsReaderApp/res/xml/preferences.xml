<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory
        android:key="pref_key_application_settings"
        android:title="Application Settings" >
        <PreferenceScreen
            android:title="Add Site"
            android:summary="Select catogories to recieve updates"
            >
            <intent android:targetPackage="com.news2day.main"
                android:targetClass="com.news2day.main.AddSiteActivity"
                />
        </PreferenceScreen>
        <SwitchPreference
            android:key="pref_key_sound_settings"
            android:title="Sound" 
            android:defaultValue="true" />
        <SwitchPreference
            android:key="pref_key_texttovice_settings"
            android:title="Text to voice"
            android:defaultValue="true" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="pref_key_storage_settings"
        android:title="Storage Settings" >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_key_auto_delete"
            android:summary="Set duration at which you would like to recieve"
            android:title="News Feeds Archive Time" />
	        <CheckBoxPreference
	            android:dependency="pref_key_auto_delete"
	            android:key="pref_key_sms_delete_limit"
	            android:title="1 day" />
	        <CheckBoxPreference
	            android:dependency="pref_key_auto_delete"
	            android:key="pref_key_sms_delete_limit"
	            android:title="7 days" />
	        <CheckBoxPreference
	            android:dependency="pref_key_auto_delete"
	            android:key="pref_key_sms_delete_limit"
	            android:title="15 days" />
	        <CheckBoxPreference
	            android:dependency="pref_key_auto_delete"
	            android:key="pref_key_sms_delete_limit"
	            android:title="1 month" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_key_auto_refresh"
            android:summary="Set duration at which you would like to recieve"
            android:title="News Feeds Refresh Time" />

        <CheckBoxPreference
            android:dependency="pref_key_auto_refresh"
            android:key="pref_key_sms_refresh_limit1"
            android:title="3 hours" />
        <CheckBoxPreference
            android:dependency="pref_key_auto_refresh"
            android:key="pref_key_mms_refresh_limit2"
            android:title="6 hours" />
        <CheckBoxPreference
            android:dependency="pref_key_auto_refresh"
            android:key="pref_key_mms_refresh_limit3"
            android:title="12 hours" />
        <CheckBoxPreference
            android:dependency="pref_key_auto_refresh"
            android:key="pref_key_mms_refresh_limit3"
            android:title="1 day" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="pref_key_about_settings"
        android:title="About" >
     </PreferenceCategory>   

</PreferenceScreen>